#include <stdio.h>

int main() {
    int jose, pedro, anos;
    anos = 0;
    jose = 150 + 2 * anos;
    pedro = 110 + 3 * anos;

    while (pedro <= jose) {
        anos++;
        jose = 150 + 2 * anos;
        pedro = 110 + 3 * anos;
    }

    printf("Em %d anos, Pedro (%d cm) será maior que José (%d cm).", anos, pedro, jose);

    return 0;
}
