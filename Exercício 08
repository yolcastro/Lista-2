#include <stdio.h>

int main() {
    float valor, entrada;
    int prestacao;

    printf("Digite o valor da mercadoria:\n");
    scanf("%f", &valor);

    prestacao = (valor/3);

    entrada = valor - (2 * prestacao);

    printf("O valor da entrada é de R$%.2f e de cada prestação é de R$%d.", entrada, prestacao);
    
    return 0;
}
