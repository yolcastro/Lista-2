#include <stdio.h>

int main() {
    int n = 0, maior = 0, menor = n;

    do {
        printf("Digite um número:\n");
        scanf("%d", &n);

        if (n <= 0) {
            if (n % 2 == 0) {
            break;
            }
        }

        if (n > maior) {
            maior = n;
        }
        
        if (n < menor) {
            menor = n;
        }
    } while (1);
    
    printf("O menor número é %d e o maior é %d. O resultado do produto entre ambos é: %d.\n", menor, maior, menor * maior);

    return 0;
}
