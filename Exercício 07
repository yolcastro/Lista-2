#include <stdio.h>

int main() {
    int n1, n2;

    while (1) {
        printf("Digite um valor inteiro para o dividendo:\n");
        scanf("%d", &n1);

        printf("Digite um valor inteiro para o divisor:\n");
        scanf("%d", &n2);
        
        if (n2 == 0) {
            continue;
        }
        else {
            break;
        }
    }
    printf("O resultado da divisão de %d por %d é %d.\n", n1, n2, n1/n2);

    return 0;
}
