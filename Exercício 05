#include <stdio.h>

int main() {
    int n, maior, menor;
    maior = 0;
    menor = n;

    while (1) {
        printf("Digite um nÃºmero:\n");
        scanf("%d", &n);

        if (n == 0){
        break;
        }

        if (n > maior){
            maior = n;
        }
        if (n < menor){
            menor = n;
        }
    }

    printf("Maior: %d\n", maior);
    printf("Menor: %d\n", menor);

    return 0;
}
